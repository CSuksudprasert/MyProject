<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ShowdataActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        />

    <com.miguelcatalan.materialsearchview.MaterialSearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        />

    <ImageButton
        android:id="@+id/qrcode"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_qrcode"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:id="@+id/nextto_adddata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="เพิ่มข้อมูล"
        android:background="@drawable/bg_buttom"
        android:layout_below="@+id/toolbar"

        />
    <LinearLayout
        android:id="@+id/customer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/nextto_adddata"

        >

<!--        <andriod.support.v4.widget.SwipeRefreshLayout-->
<!--            android:id="@+id/swipe_refresh_layout"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            >-->

            <ListView
                android:id="@+id/listview_cus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                >

            </ListView>
<!--        </andriod.support.v4.widget.SwipeRefreshLayout>-->


    </LinearLayout>


</RelativeLayout>